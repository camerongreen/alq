<?php
/**
 * @file
 * Installation details for the ALQ MPs module
 */

/**
 * Implements hook_install()
 */
function alq_mps_install() {
  alq_mps_insert_electorates();
  $mps = alq_mps_get_raw();
  alq_mps_insert($mps);
}

/**
 * Implements hook_schema()
 *
 * @return mixed
 */
